<!DOCTYPE html>
<html>
<head>
  <title>Calculadora</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Calculadora</h1>
    <form action="/calcular" method="post">
      <div class="mb-3">
        <label for="numA" class="form-label">Número A</label>
        <input type="number" class="form-control" id="numA" name="numA" required>
      </div>
      <div class="mb-3">
        <label for="numB" class="form-label">Número B</label>
        <input type="number" class="form-control" id="numB" name="numB" required>
      </div>
      <div class="mb-3">
        <label for="operacao" class="form-label">Operação</label>
        <select class="form-select" id="operacao" name="operacao">
          <option value="+" selected>+</option>
          <option value="-">-</option>
          <option value="*">*</option>
          <option value="/">/</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Calcular</button>
    </form>
  </div>
</body>
</html>
